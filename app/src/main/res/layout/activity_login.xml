<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/store"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        />

    <EditText
        android:id="@+id/loginUsernameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loginFinalButton"
        android:layout_marginBottom="50dp"
        android:background="@drawable/input_background"
        android:padding="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Username"
        android:textColorHint="#cfcecc"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        />
    <Button
        android:id="@+id/loginFinalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="10dp"
        android:text="Login"
        android:textAlignment="center"
        android:background="@drawable/buttons"
        android:textSize="25dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Please provide your name above \n and click the Login button."
        android:textSize="20dp"
        android:textColor="#cfffff"
        android:textStyle="italic"
        />

</RelativeLayout>